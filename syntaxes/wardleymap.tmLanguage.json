{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "WardleyMap",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"match": "(y-axis|evolution|note|anchor|annotations|annotation|component|market|submap|title|style|outsource|build|product|buy|pipeline)(\\s*[-+\\'\";a-zA-Z0-9\\s*]+)",
					"captures": {
						"1": {
							"name": "storage.type"
						},
						"2": {
							"name": "entity.name.function"
						}
					}
				},
				{
					"match": "(evolve)(\\s*[a-zA-Z0-9\\s*]+)(\\d+(?:\\.\\d{1,})*)",
					"captures": {
					  "1": {
						"name": "storage.type"
					  },
					  "2": {
						  "name": "entity.name.function"
					  },
					  "3": {
						"name": "constant.numeric.skinparam.keyword.source.wardleymap"
					  }
					}
				  },
				  {
					"match": "(label)(\\s*\\[)(-*\\d+)(\\,\\s*)(-*\\d+)(\\])",
					"captures": 
					{
					  "1": {
						"name": "storage.type"
					  },
					  "2": {
						"name": "punctuation.paren.open"
					  },
					  "3": {
						"name": "constant.numeric.skinparam.keyword.source.wardleymap"
					  },
					  "4": {
						"name": "punctuation.paren.open"
					  },
					  "5": {
						"name": "constant.numeric.skinparam.keyword.source.wardleymap"
					  },
					  "6": {
						"name": "punctuation.paren.clode"
					  }
					}
				},
				  {
					"match": "(\\[*)(\\[)(\\d+(?:\\.\\d{1,})*)(\\,\\s*)(\\d+(?:\\.\\d{1,}))(\\])(\\]*)",
					"captures": 
					{
					  "1": {
						"name": "punctuation.paren.open"
					  },
					  "2": {
						"name": "punctuation.paren.open"
					  },
					  "3": {
						"name": "constant.numeric.skinparam.keyword.source.wardleymap"
					  },
					  "4": {
						"name": "punctuation.paren.open"
					  },
					  "5": {
						"name": "constant.numeric.skinparam.keyword.source.wardleymap"
					  },
					  "6": {
						"name": "punctuation.paren.clode"
					  },
					  "7": {
						"name": "punctuation.paren.close"
					  }
					}
				},
				{
					"match": "(inertia)",
					"captures": {
						"1": {
							"name": "storage.type"
						}
					}
				},
				{
					"match": "(\\s*[a-zA-Z0-9\\s*]+)(\\-\\>)(\\s*[a-zA-Z0-9\\s*]+)",
					"captures": {
						"1": {
							"name": "entity.name.function"
						},
						"2": {
							"name": "keyword.operator.assignment.js"
						},
						"3": {
							"name": "entity.name.function"
						}
					}
				}
		]
		},
		"strings": {
			"name": "string.quoted.double.wardleymap",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.wardleymap",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.wardleymap"
}